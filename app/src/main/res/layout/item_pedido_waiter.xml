<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Fila 1: Código y Mesa -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_codigo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ORD-001"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/text_mesa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mesa 5"
                android:textColor="#757575" />
        </LinearLayout>

        <!-- Fila 2: Artículos -->
        <TextView
            android:id="@+id/text_articulos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Paella Valenciana\n• Gazpacho\n• Sangría"
            android:textColor="#444444"
            android:textSize="14sp"
            android:layout_marginTop="6dp" />

        <!-- Fila 3: Estado y tiempo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/text_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_estado_preparando"
                android:text="Preparando"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_tiempo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pedido: 14:30\nEst: 15 min"
                android:textColor="#666666"
                android:textSize="12sp"
                android:gravity="end" />
        </LinearLayout>

        <!-- Fila 4: Mesero -->
        <TextView
            android:id="@+id/text_mesero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="María García"
            android:textSize="13sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp" />

        <!-- Fila 5: Total y Acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/text_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="$32.50"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btn_accion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#2E7D32"
                android:text="Marcar Listo"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
